{
    "name": "clarkf/hitch",
    "description": "Handle images in your app with ease",
    "homepage": "https://github.com/clarkf/hitch",
    "license": "MIT",
    "authors": [
        {
            "name": "Clark Fischer",
            "email": "clark.fischer@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.3.0",
        "symfony/http-foundation": "2.4.*"
    },
    "suggest": {
        "ext-gd": "Use PHP's GD extension to manipulate images"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7",
        "mockery/mockery": "~0.8",
        "satooshi/php-coveralls": "~0.6",
        "squizlabs/php_codesniffer": "~1.5",
        "phpmd/phpmd": "~1.5"
    },
    "autoload": {
        "psr-0": {
            "Hitch": "src"
        }
    }
}
